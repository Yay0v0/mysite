<!DOCTYPE html>
<html>
  <head>
    <title>MyNote</title>
    <%= csrf_meta_tags %>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
    <header>
      <div class="container">
        <div class="header-left">
          <a href="/top"> <img src="/logo.png" class="header-logo"> </a>
        </div>
        <div class="header-right">
          <ul>
            <li><%=link_to("/new") do %><span class="fa fa-plus header-fa"></span> <% end %> </li>
            <li><%=link_to("/") do %> <span class="fa fa-cog header-fa"></span> <% end %></li>
            <li><%=link_to("/") do %> <span class="fa fa-sign-out header-fa"></span> <% end %></li>
          </ul>
        </div>
      </div>
    </header>

    <%= yield %>
  </body>
</html>
